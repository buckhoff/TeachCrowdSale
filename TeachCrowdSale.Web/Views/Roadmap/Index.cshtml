@model TeachCrowdSale.Core.Models.RoadmapPageModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Platform Roadmap & Development - TeachToken" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <meta property="og:image" content="/images/teachtoken-roadmap-og.jpg" />
    <meta property="og:url" content="https://teachtoken.io/roadmap" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Platform Roadmap & Development - TeachToken" />
    <meta name="twitter:description" content="@ViewData["Description"]" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Syncfusion CSS -->
    <link href="https://cdn.syncfusion.com/ej2/material3-dark.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/roadmap.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Structured Data -->
    @if (ViewBag.StructuredData != null)
    {
        <script type="application/ld+json">
            @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.StructuredData))
        </script>
    }
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="container">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="/" class="brand-link">
                        <span class="brand-icon">🎓</span>
                        <span class="brand-text">TeachToken</span>
                    </a>
                </div>

                <ul class="nav-menu">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/tokenomics" class="nav-link">Tokenomics</a></li>
                    <li><a href="/buy" class="nav-link">Buy</a></li>
                    <li><a href="/staking" class="nav-link">Staking</a></li>
                    <li><a href="/roadmap" class="nav-link active">Roadmap</a></li>
                    <li><a href="/community" class="nav-link">Community</a></li>
                    <li><a href="/analytics" class="nav-link">Analytics</a></li>
                </ul>

                <div class="nav-toggle" id="nav-toggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="roadmap-hero">
            <div class="container">
                <div class="roadmap-hero-content">
                    <h1 class="roadmap-title">
                        Platform Roadmap & Development
                    </h1>
                    <p class="roadmap-subtitle">
                        Track our progress as we build the future of decentralized education.
                        Explore development milestones, GitHub activity, and upcoming platform features.
                    </p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="error-banner">
                            <div class="error-content">
                                <span class="error-icon">⚠️</span>
                                <span class="error-text">@ViewBag.ErrorMessage</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- Progress Overview Section -->
        <section class="progress-overview">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Development Overview</h2>
                    <p class="section-subtitle">Current progress and key metrics</p>
                </div>

                <div class="progress-grid">
                    <!-- Overall Progress Card -->
                    <div class="progress-card main-progress">
                        <div class="progress-card-header">
                            <h3 class="progress-card-title">Overall Progress</h3>
                            <span class="progress-percentage">@Model.ProgressSummary.OverallProgressFormatted</span>
                        </div>
                        <div class="progress-bar-container">
                            <div class="progress-bar @Model.ProgressSummary.ProgressBarClass">
                                <div class="progress-fill" data-progress="@Model.ProgressSummary.OverallProgress"></div>
                            </div>
                        </div>
                        <div class="progress-stats">
                            <div class="stat-item">
                                <span class="stat-label">Phase</span>
                                <span class="stat-value">@Model.ProgressSummary.CurrentPhase</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Next Milestone</span>
                                <span class="stat-value">@Model.ProgressSummary.NextMilestone</span>
                            </div>
                        </div>
                    </div>

                    <!-- Milestone Stats Card -->
                    <div class="progress-card">
                        <div class="progress-card-header">
                            <h3 class="progress-card-title">Milestones</h3>
                            <span class="progress-badge @Model.ProgressSummary.HealthStatus">@Model.ProgressSummary.HealthStatus</span>
                        </div>
                        <div class="progress-metrics">
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.CompletedMilestones</span>
                                <span class="metric-label">Completed</span>
                            </div>
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.InProgressMilestones</span>
                                <span class="metric-label">In Progress</span>
                            </div>
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.UpcomingMilestones</span>
                                <span class="metric-label">Upcoming</span>
                            </div>
                        </div>
                    </div>

                    <!-- Task Stats Card -->
                    <div class="progress-card">
                        <div class="progress-card-header">
                            <h3 class="progress-card-title">Tasks</h3>
                            @if (Model.ProgressSummary.HasOverdueTasks)
                            {
                                <span class="progress-badge warning">@Model.ProgressSummary.OverdueTasks overdue</span>
                            }
                            else
                            {
                                <span class="progress-badge success">On track</span>
                            }
                        </div>
                        <div class="progress-metrics">
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.CompletedTasks</span>
                                <span class="metric-label">Completed</span>
                            </div>
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.ActiveTasks</span>
                                <span class="metric-label">Active</span>
                            </div>
                            <div class="metric">
                                <span class="metric-number">@Model.ProgressSummary.TotalTasks</span>
                                <span class="metric-label">Total</span>
                            </div>
                        </div>
                    </div>

                    <!-- Timeline Card -->
                    <div class="progress-card">
                        <div class="progress-card-header">
                            <h3 class="progress-card-title">Timeline</h3>
                            <span class="progress-meta">@Model.ProgressSummary.EstimatedCompletionFormatted</span>
                        </div>
                        <div class="timeline-info">
                            <div class="timeline-item">
                                <span class="timeline-label">Average Completion</span>
                                <span class="timeline-value">@Model.ProgressSummary.AverageCompletionTime</span>
                            </div>
                            <div class="timeline-item">
                                <span class="timeline-label">Last Updated</span>
                                <span class="timeline-value">@Model.LastUpdatedFormatted</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Active Milestones Section -->
        <section class="active-milestones">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Active Milestones</h2>
                    <p class="section-subtitle">Current development focus areas</p>
                </div>

                @if (Model.ActiveMilestones.Any())
                {
                    <div class="milestones-grid">
                        @foreach (var milestone in Model.ActiveMilestones)
                        {
                            <div class="milestone-card @milestone.StatusClass" data-milestone-id="@milestone.Id">
                                <div class="milestone-header">
                                    <div class="milestone-category">
                                        <span class="category-icon">@milestone.CategoryIcon</span>
                                        <span class="category-text">@milestone.Category</span>
                                    </div>
                                    <div class="milestone-badges">
                                        <span class="@milestone.PriorityBadgeClass">@milestone.Priority</span>
                                        <span class="@milestone.StatusBadgeClass">@milestone.Status</span>
                                    </div>
                                </div>

                                <div class="milestone-content">
                                    <h3 class="milestone-title">@milestone.Title</h3>
                                    <p class="milestone-description">@milestone.Description</p>
                                </div>

                                <div class="milestone-progress">
                                    <div class="progress-header">
                                        <span class="progress-label">Progress</span>
                                        <span class="progress-value">@milestone.ProgressPercentage%</span>
                                    </div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: @milestone.ProgressPercentage%"></div>
                                    </div>
                                    <div class="progress-details">
                                        <span class="task-count">@milestone.ProgressText</span>
                                        <span class="time-remaining @(milestone.IsOverdue ? "overdue" : "")">@milestone.TimeRemaining</span>
                                    </div>
                                </div>

                                <div class="milestone-footer">
                                    <div class="milestone-dates">
                                        <span class="date-item">
                                            <span class="date-label">Started:</span>
                                            <span class="date-value">@milestone.StartDateFormatted</span>
                                        </span>
                                        <span class="date-item">
                                            <span class="date-label">Target:</span>
                                            <span class="date-value">@milestone.EstimatedCompletionFormatted</span>
                                        </span>
                                    </div>
                                    <button class="milestone-details-btn" data-milestone-id="@milestone.Id">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">🎯</div>
                        <h3 class="empty-title">No Active Milestones</h3>
                        <p class="empty-description">All current milestones have been completed. Check back soon for new development goals!</p>
                    </div>
                }
            </div>
        </section>

        <!-- GitHub Activity Section -->
        <section class="github-activity">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">GitHub Activity</h2>
                    <p class="section-subtitle">Live development statistics and repository insights</p>
                </div>

                <div class="github-grid">
                    <!-- Commit Activity Card -->
                    <div class="github-card">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">📊</span>
                                Commit Activity
                            </h3>
                            <span class="activity-level @Model.GitHubStats.ActivityLevel">@Model.GitHubStats.ActivityLevel Activity</span>
                        </div>
                        <div class="github-stats">
                            <div class="stat-row">
                                <span class="stat-label">Total Commits</span>
                                <span class="stat-value">@Model.GitHubStats.TotalCommits.ToString("N0")</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">This Month</span>
                                <span class="stat-value">@Model.GitHubStats.CommitsThisMonth</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">This Week</span>
                                <span class="stat-value">@Model.GitHubStats.CommitsThisWeek</span>
                            </div>
                        </div>
                        <div class="github-footer">
                            <span class="github-meta">@Model.GitHubStats.CommitFrequencyText</span>
                        </div>
                    </div>

                    <!-- Contributors Card -->
                    <div class="github-card">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">👥</span>
                                Contributors
                            </h3>
                            <span class="contributor-count">@Model.GitHubStats.ActiveContributors Active</span>
                        </div>
                        <div class="github-stats">
                            <div class="stat-row">
                                <span class="stat-label">Total Contributors</span>
                                <span class="stat-value">@Model.GitHubStats.TotalContributors</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Active This Month</span>
                                <span class="stat-value">@Model.GitHubStats.ActiveContributors</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Lines of Code</span>
                                <span class="stat-value">@Model.GitHubStats.LinesOfCode.ToString("N0")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Pull Requests Card -->
                    <div class="github-card">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">🔀</span>
                                Pull Requests
                            </h3>
                            <span class="pr-status">@Model.GitHubStats.OpenPullRequests Open</span>
                        </div>
                        <div class="github-stats">
                            <div class="stat-row">
                                <span class="stat-label">Total PRs</span>
                                <span class="stat-value">@Model.GitHubStats.TotalPullRequests</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Merged</span>
                                <span class="stat-value">@Model.GitHubStats.MergedPullRequests</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Open</span>
                                <span class="stat-value">@Model.GitHubStats.OpenPullRequests</span>
                            </div>
                        </div>
                        <div class="github-footer">
                            <span class="github-meta">@Model.GitHubStats.PullRequestStatusText</span>
                        </div>
                    </div>

                    <!-- Latest Commit Card -->
                    <div class="github-card latest-commit">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">💾</span>
                                Latest Commit
                            </h3>
                            @if (Model.GitHubStats.HasRecentActivity)
                            {
                                <span class="commit-status recent">Recent</span>
                            }
                            else
                            {
                                <span class="commit-status older">@Model.GitHubStats.LastCommitFormatted</span>
                            }
                        </div>
                        <div class="commit-details">
                            <div class="commit-message">@Model.GitHubStats.LastCommitMessageDisplay</div>
                            <div class="commit-meta">
                                <span class="commit-author">by @Model.GitHubStats.LastCommitAuthorDisplay</span>
                                <span class="commit-time">@Model.GitHubStats.LastCommitFormatted</span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.GitHubStats.RepositoryUrl))
                        {
                            <div class="github-footer">
                                <a href="@Model.GitHubStats.RepositoryUrl" target="_blank" rel="noopener" class="github-link">
                                    View on GitHub →
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Repository Stats Card -->
                    <div class="github-card">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">⭐</span>
                                Repository
                            </h3>
                            <span class="repo-branch">@Model.GitHubStats.DefaultBranch</span>
                        </div>
                        <div class="github-stats">
                            <div class="stat-row">
                                <span class="stat-label">Stars</span>
                                <span class="stat-value">@Model.GitHubStats.StarCount</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Forks</span>
                                <span class="stat-value">@Model.GitHubStats.ForkCount</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Watchers</span>
                                <span class="stat-value">@Model.GitHubStats.WatcherCount</span>
                            </div>
                        </div>
                        <div class="github-footer">
                            <span class="github-meta">@Model.GitHubStats.RepositoryStatsText</span>
                        </div>
                    </div>

                    <!-- Issues Card -->
                    <div class="github-card">
                        <div class="github-card-header">
                            <h3 class="github-card-title">
                                <span class="github-icon">🐛</span>
                                Issues
                            </h3>
                            <span class="issue-status">@Model.GitHubStats.OpenIssues Open</span>
                        </div>
                        <div class="github-stats">
                            <div class="stat-row">
                                <span class="stat-label">Total Issues</span>
                                <span class="stat-value">@Model.GitHubStats.TotalIssues</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Open</span>
                                <span class="stat-value">@Model.GitHubStats.OpenIssues</span>
                            </div>
                            <div class="stat-row">
                                <span class="stat-label">Closed</span>
                                <span class="stat-value">@Model.GitHubStats.ClosedIssues</span>
                            </div>
                        </div>
                        <div class="github-footer">
                            <span class="github-meta">@Model.GitHubStats.IssueStatusText</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Development Stats Section -->
        <section class="development-stats">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Development Metrics</h2>
                    <p class="section-subtitle">Code quality, testing, and build statistics</p>
                </div>

                <div class="dev-stats-grid">
                    <!-- Build Status Card -->
                    <div class="dev-stat-card">
                        <div class="dev-stat-header">
                            <h3 class="dev-stat-title">Build Status</h3>
                            <span class="build-badge @Model.DevelopmentStats.BuildStatusClass">@Model.DevelopmentStats.BuildStatus</span>
                        </div>
                        <div class="dev-stat-content">
                            <div class="stat-item">
                                <span class="stat-label">Last Build</span>
                                <span class="stat-value">@Model.DevelopmentStats.LastBuildFormatted</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Build Health</span>
                                <span class="stat-value">@(Model.DevelopmentStats.IsBuildHealthy ? "Healthy" : "Issues Detected")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Code Coverage Card -->
                    <div class="dev-stat-card">
                        <div class="dev-stat-header">
                            <h3 class="dev-stat-title">Code Coverage</h3>
                            <span class="coverage-badge @Model.DevelopmentStats.CodeQualityStatus">@Model.DevelopmentStats.CodeCoverageFormatted</span>
                        </div>
                        <div class="coverage-progress">
                            <div class="coverage-bar">
                                <div class="coverage-fill @Model.DevelopmentStats.CodeQualityStatus" style="width: @Model.DevelopmentStats.CodeCoverage%"></div>
                            </div>
                        </div>
                        <div class="dev-stat-content">
                            <div class="stat-item">
                                <span class="stat-label">Test Status</span>
                                <span class="stat-value">@Model.DevelopmentStats.TestStatusText</span>
                            </div>
                            @if (Model.DevelopmentStats.HasFailingTests)
                            {
                                <div class="stat-item warning">
                                    <span class="stat-label">Failing Tests</span>
                                    <span class="stat-value">@Model.DevelopmentStats.FailingTests</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Code Activity Card -->
                    <div class="dev-stat-card">
                        <div class="dev-stat-header">
                            <h3 class="dev-stat-title">Code Activity</h3>
                            <span class="activity-badge">This Week</span>
                        </div>
                        <div class="dev-stat-content">
                            <div class="stat-item">
                                <span class="stat-label">Files Changed</span>
                                <span class="stat-value">@Model.DevelopmentStats.FilesChanged</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Active Branches</span>
                                <span class="stat-value">@Model.DevelopmentStats.ActiveBranches</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Total LOC</span>
                                <span class="stat-value">@Model.DevelopmentStats.LinesOfCodeFormatted</span>
                            </div>
                        </div>
                    </div>

                    <!-- Technical Debt Card -->
                    <div class="dev-stat-card">
                        <div class="dev-stat-header">
                            <h3 class="dev-stat-title">Technical Debt</h3>
                            <span class="debt-badge">@Model.DevelopmentStats.TechnicalDebtFormatted</span>
                        </div>
                        <div class="dev-stat-content">
                            <div class="stat-item">
                                <span class="stat-label">Code Reviews</span>
                                <span class="stat-value">@Model.DevelopmentStats.CodeReviewsCompleted Completed</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Deployment</span>
                                <span class="stat-value">@Model.DevelopmentStats.DeploymentFrequency</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Recent Releases Section -->
        @if (Model.RecentReleases.Any())
        {
            <section class="recent-releases">
                <div class="container">
                    <div class="section-header">
                        <h2 class="section-title">Recent Releases</h2>
                        <p class="section-subtitle">Latest platform updates and version history</p>
                    </div>

                    <div class="releases-timeline">
                        @foreach (var release in Model.RecentReleases.Take(5))
                        {
                            <div class="release-item">
                                <div class="release-marker">
                                    <span class="release-icon">@release.ReleaseTypeIcon</span>
                                </div>
                                <div class="release-content">
                                    <div class="release-header">
                                        <h3 class="release-title">@release.Title</h3>
                                        <div class="release-badges">
                                            <span class="version-badge">@release.VersionDisplay</span>
                                            <span class="status-badge @release.StatusBadge">@release.StatusBadge</span>
                                        </div>
                                    </div>
                                    <p class="release-description">@release.DescriptionPreview</p>
                                    <div class="release-meta">
                                        <span class="release-date">@release.ReleaseDateFormatted</span>
                                        <span class="release-type">@release.ReleaseType Release</span>
                                        @if (release.HasGitHubLink)
                                        {
                                            <a href="@release.GitHubUrl" target="_blank" rel="noopener" class="release-link">
                                                View on GitHub
                                            </a>
                                        }
                                        @if (release.HasDownload)
                                        {
                                            <a href="@release.DownloadUrl" target="_blank" rel="noopener" class="release-link download">
                                                Download
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        }

        <!-- Upcoming Milestones Section -->
        @if (Model.UpcomingMilestones.Any())
        {
            <section class="upcoming-milestones">
                <div class="container">
                    <div class="section-header">
                        <h2 class="section-title">Upcoming Milestones</h2>
                        <p class="section-subtitle">What's coming next in our development journey</p>
                    </div>

                    <div class="upcoming-grid">
                        @foreach (var milestone in Model.UpcomingMilestones.Take(6))
                        {
                            <div class="upcoming-card" data-milestone-id="@milestone.Id">
                                <div class="upcoming-header">
                                    <div class="upcoming-category">
                                        <span class="category-icon">@milestone.CategoryIcon</span>
                                        <span class="category-text">@milestone.Category</span>
                                    </div>
                                    <span class="@milestone.PriorityBadgeClass">@milestone.Priority</span>
                                </div>
                                <h3 class="upcoming-title">@milestone.Title</h3>
                                <p class="upcoming-description">@milestone.Description</p>
                                <div class="upcoming-footer">
                                    <span class="upcoming-date">Target: @milestone.EstimatedCompletionFormatted</span>
                                    <span class="upcoming-duration">@milestone.DurationEstimate</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        }

        <!-- Completed Milestones Section (Condensed) -->
        @if (Model.CompletedMilestones.Any())
        {
            <section class="completed-milestones">
                <div class="container">
                    <div class="section-header">
                        <h2 class="section-title">Completed Milestones</h2>
                        <p class="section-subtitle">Recent achievements and delivered features</p>
                    </div>

                    <div class="completed-list">
                        @foreach (var milestone in Model.CompletedMilestones.Take(8))
                        {
                            <div class="completed-item">
                                <div class="completed-icon">✅</div>
                                <div class="completed-content">
                                    <h4 class="completed-title">@milestone.Title</h4>
                                    <div class="completed-meta">
                                        <span class="completed-category">@milestone.Category</span>
                                        <span class="completed-date">@milestone.ActualCompletionFormatted</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (Model.CompletedMilestones.Count > 8)
                    {
                        <div class="show-more-container">
                            <button class="show-more-btn" id="showMoreCompleted">
                                Show @(Model.CompletedMilestones.Count - 8) More Completed Milestones
                            </button>
                        </div>
                    }
                </div>
            </section>
        }
    </main>


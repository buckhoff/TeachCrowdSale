@model TeachCrowdSale.Core.Models.Tokenomics.TokenomicsDisplayModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "TEACH Token Tokenomics - Complete Financial Architecture";
    ViewData["Description"] = "Explore TEACH token's institutional-grade tokenomics with multi-year treasury runway, deflationary mechanics, and sustainable value creation.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="TEACH Token Tokenomics - TeachToken Platform" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <meta property="og:image" content="/images/teachtoken-tokenomics-og.jpg" />
    <meta property="og:url" content="https://teachtoken.io/tokenomics" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="TEACH Token Tokenomics - TeachToken Platform" />
    <meta name="twitter:description" content="@ViewData["Description"]" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Syncfusion CSS -->
    <link href="https://cdn.syncfusion.com/ej2/material3-dark.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tokenomics.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="container">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="/" class="brand-link">
                        <span class="brand-icon">🎓</span>
                        <span class="brand-text">TeachToken</span>
                    </a>
                </div>

                <ul class="nav-menu">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/tokenomics" class="nav-link active">Tokenomics</a></li>
                    <li><a href="/buy" class="nav-link">Buy TEACH</a></li>
                    <li><a href="#platform" class="nav-link">Platform</a></li>
                    <li><a href="#community" class="nav-link">Community</a></li>
                </ul>

                <a href="/buy" class="nav-cta">
                    Buy TEACH
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content Wrapper -->
    <div class="main-content">

        <!-- Tokenomics Hero Section -->
        <section class="tokenomics-hero-section">
            <div class="container">
                <div class="tokenomics-hero-container">
                    <div class="tokenomics-hero-content">
                        <h1>TEACH Token Tokenomics</h1>
                        <p class="tokenomics-hero-subtitle">
                            Institutional-grade financial architecture designed for multi-year sustainability.
                            Our revolutionary treasury hierarchy ensures 10+ year operational runway through any market condition.
                        </p>
                        <div class="hero-metrics-grid">
                            <div class="hero-metric">
                                <span class="metric-value" data-live="totalSupply">5.0B</span>
                                <span class="metric-label">Total Supply</span>
                            </div>
                            <div class="hero-metric">
                                <span class="metric-value" data-live="lockedPercentage">80%</span>
                                <span class="metric-label">Locked Long-Term</span>
                            </div>
                            <div class="hero-metric">
                                <span class="metric-value" data-treasury="runwayYears">10.5</span>
                                <span class="metric-label">Years Runway</span>
                            </div>
                        </div>
                    </div>
                    <div class="live-metrics-card">
                        <h3>Live Token Metrics</h3>
                        <div class="live-metrics-grid">
                            <div class="live-metric">
                                <span class="live-metric-label">Current Price</span>
                                <span class="live-metric-value" data-live="currentPrice">$0.065</span>
                            </div>
                            <div class="live-metric">
                                <span class="live-metric-label">Market Cap</span>
                                <span class="live-metric-value" data-live="marketCap">$325M</span>
                            </div>
                            <div class="live-metric">
                                <span class="live-metric-label">24h Volume</span>
                                <span class="live-metric-value" data-live="volume24h">$2.5M</span>
                            </div>
                            <div class="live-metric">
                                <span class="live-metric-label">24h Change</span>
                                <span class="live-metric-value positive" data-live="priceChange24h">+4.8%</span>
                            </div>
                            <div class="live-metric">
                                <span class="live-metric-label">Holders</span>
                                <span class="live-metric-value" data-live="holdersCount">3,247</span>
                            </div>
                            <div class="live-metric">
                                <span class="live-metric-label">TVL</span>
                                <span class="live-metric-value" data-live="totalValueLocked">$15M</span>
                            </div>
                        </div>
                        <div class="last-updated">
                            Last updated: Loading...
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Token Distribution Section -->
        <section class="token-distribution-section tokenomics-section" id="distribution">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Token Distribution</h2>
                    <p class="section-subtitle">
                        Revolutionary 80/20 allocation model ensures long-term sustainability with limited circulating supply
                    </p>
                </div>
                <div class="distribution-container">
                    <div class="distribution-chart-container">
                        <h3>Supply Allocation Breakdown</h3>
                        <div id="tokenDistributionChart" style="height: 400px;"></div>
                    </div>
                    <div class="distribution-details">
                        <h3>Allocation Details</h3>
                        <div class="allocation-list" id="allocationList">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                        <div class="supply-metrics">
                            <h4>Supply Metrics</h4>
                            <div class="metrics-grid">
                                <div class="supply-metric">
                                    <span class="supply-metric-label">Max Supply</span>
                                    <span class="supply-metric-value" data-supply="maxSupply">5.0B</span>
                                </div>
                                <div class="supply-metric">
                                    <span class="supply-metric-label">Circulating</span>
                                    <span class="supply-metric-value" data-supply="circulatingSupply">1.0B</span>
                                </div>
                                <div class="supply-metric">
                                    <span class="supply-metric-label">Locked</span>
                                    <span class="supply-metric-value" data-supply="lockedSupply">4.0B</span>
                                </div>
                                <div class="supply-metric">
                                    <span class="supply-metric-label">Burned</span>
                                    <span class="supply-metric-value" data-supply="burnedSupply">0</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Vesting Schedule Section -->
        <section class="vesting-schedule-section tokenomics-section" id="vesting">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Vesting Schedule</h2>
                    <p class="section-subtitle">
                        Strategic token release timeline designed to prevent dumps and ensure long-term value creation
                    </p>
                </div>
                <div class="vesting-container">
                    <div class="vesting-chart-container">
                        <h3>Token Unlock Timeline</h3>
                        <div id="vestingTimelineChart" style="height: 400px;"></div>
                    </div>
                    <div class="vesting-categories">
                        <h3>Vesting Categories</h3>
                        <div id="vestingCategoriesList">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                        <div class="vesting-summary">
                            <h4>Vesting Summary</h4>
                            <div class="summary-stats">
                                <div class="summary-stat">
                                    <span class="stat-label">Total Vested</span>
                                    <span class="stat-value" data-vesting="totalVested">4.0B TEACH</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Currently Unlocked</span>
                                    <span class="stat-value" data-vesting="currentlyUnlocked">1.0B TEACH</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Next Unlock</span>
                                    <span class="stat-value" data-vesting="nextUnlockDate">In 90 days</span>
                                </div>
                                <div class="summary-stat">
                                    <span class="stat-label">Next Amount</span>
                                    <span class="stat-value" data-vesting="nextUnlockAmount">250M TEACH</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Treasury Analytics Section -->
        <section class="treasury-analytics-section tokenomics-section" id="treasury">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Treasury Analytics</h2>
                    <p class="section-subtitle">
                        Multi-layered financial fortress designed to survive any market condition with 10+ year operational runway
                    </p>
                </div>
                <div class="treasury-container">
                    <div class="treasury-overview">
                        <div class="treasury-metrics">
                            <div class="treasury-metric primary">
                                <span class="metric-icon">💰</span>
                                <div class="metric-info">
                                    <span class="metric-value" data-treasury="totalValue">$87.5M</span>
                                    <span class="metric-label">Total Treasury Value</span>
                                </div>
                            </div>
                            <div class="treasury-metric secondary">
                                <span class="metric-icon">⏱️</span>
                                <div class="metric-info">
                                    <span class="metric-value" data-treasury="runwayYears">10.5</span>
                                    <span class="metric-label">Years Operational Runway</span>
                                </div>
                            </div>
                            <div class="treasury-metric success">
                                <span class="metric-icon">🔒</span>
                                <div class="metric-info">
                                    <span class="metric-value" data-treasury="safetyFund">$8.75M</span>
                                    <span class="metric-label">Emergency Safety Fund</span>
                                </div>
                            </div>
                            <div class="treasury-metric warning">
                                <span class="metric-icon">📊</span>
                                <div class="metric-info">
                                    <span class="metric-value" data-treasury="monthlyBurn">$695K</span>
                                    <span class="metric-label">Monthly Burn Rate</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="treasury-allocation-container">
                        <h3>Treasury Allocation</h3>
                        <div id="treasuryAllocationChart" style="height: 350px;"></div>
                    </div>
                    <div class="scenario-analysis">
                        <h3>Stress Test Scenarios</h3>
                        <div class="scenarios-grid" id="scenariosGrid">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Burn Mechanics Section -->
        <section class="burn-mechanics-section tokenomics-section" id="burn">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Burn Mechanics</h2>
                    <p class="section-subtitle">
                        Deflationary tokenomics with multiple burn mechanisms to create natural scarcity and value appreciation
                    </p>
                </div>
                <div class="burn-container">
                    <div class="burn-stats-card">
                        <h3>Burn Statistics</h3>
                        <div class="burn-stats-grid">
                            <div class="burn-stat">
                                <span class="burn-stat-value" data-burn="totalBurned">0</span>
                                <span class="burn-stat-label">Total Burned</span>
                            </div>
                            <div class="burn-stat">
                                <span class="burn-stat-value" data-burn="burnedPercentage">0%</span>
                                <span class="burn-stat-label">% of Supply Burned</span>
                            </div>
                            <div class="burn-stat">
                                <span class="burn-stat-value" data-burn="estimatedAnnualBurn">25M</span>
                                <span class="burn-stat-label">Est. Annual Burn</span>
                            </div>
                            <div class="burn-stat">
                                <span class="burn-stat-value" data-burn="burnRate">0.5%</span>
                                <span class="burn-stat-label">Annual Burn Rate</span>
                            </div>
                        </div>
                    </div>
                    <div class="burn-mechanisms">
                        <h3>Burn Mechanisms</h3>
                        <div class="burn-mechanisms-grid" id="burnMechanismsGrid">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                    </div>
                    <div class="burn-projection-container">
                        <h3>5-Year Burn Projection</h3>
                        <div id="burnProjectionChart" style="height: 350px;"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Utility Features Section -->
        <section class="utility-features-section tokenomics-section" id="utility">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Utility & Use Cases</h2>
                    <p class="section-subtitle">
                        Real-world utility driving demand and value creation across the educational ecosystem
                    </p>
                </div>
                <div class="utility-container">
                    <div class="utility-categories-grid" id="utilityCategoriesGrid">
                        <!-- Dynamic content populated by JavaScript -->
                    </div>
                    <div class="utility-metrics-card">
                        <h3>Utility Metrics</h3>
                        <div class="utility-metrics-grid">
                            <div class="utility-metric">
                                <span class="utility-metric-value" data-utility="totalVolume">$0</span>
                                <span class="utility-metric-label">Total Utility Volume</span>
                            </div>
                            <div class="utility-metric">
                                <span class="utility-metric-value" data-utility="activeUtilities">0</span>
                                <span class="utility-metric-label">Active Utilities</span>
                            </div>
                            <div class="utility-metric">
                                <span class="utility-metric-value" data-utility="uniqueUsers">0</span>
                                <span class="utility-metric-label">Unique Users</span>
                            </div>
                            <div class="utility-metric">
                                <span class="utility-metric-value" data-utility="growthRate">0%</span>
                                <span class="utility-metric-label">Monthly Growth</span>
                            </div>
                        </div>
                    </div>
                    <div class="utility-roadmap">
                        <h3>Utility Roadmap</h3>
                        <div class="roadmap-timeline" id="utilityRoadmapTimeline">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Governance Section -->
        <section class="governance-section tokenomics-section" id="governance">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Governance & DAO</h2>
                    <p class="section-subtitle">
                        Community-driven decision making with transparent governance and democratic treasury management
                    </p>
                </div>
                <div class="governance-container">
                    <div class="governance-overview-card">
                        <h3>Governance Overview</h3>
                        <div class="governance-overview-grid">
                            <div class="governance-overview-item">
                                <span class="governance-value" data-governance="totalVotingPower">0</span>
                                <span class="governance-label">Total Voting Power</span>
                            </div>
                            <div class="governance-overview-item">
                                <span class="governance-value" data-governance="activeProposals">0</span>
                                <span class="governance-label">Active Proposals</span>
                            </div>
                            <div class="governance-overview-item">
                                <span class="governance-value" data-governance="passedProposals">0</span>
                                <span class="governance-label">Passed Proposals</span>
                            </div>
                            <div class="governance-overview-item">
                                <span class="governance-value" data-governance="participationRate">0%</span>
                                <span class="governance-label">Participation Rate</span>
                            </div>
                        </div>
                    </div>
                    <div class="governance-features">
                        <h3>Governance Features</h3>
                        <div class="governance-features-grid" id="governanceFeaturesGrid">
                            <!-- Dynamic content populated by JavaScript -->
                        </div>
                    </div>
                    <div class="active-proposals">
                        <h3>Active Proposals</h3>
                        <div class="proposals-list" id="activeProposalsList">
                            <div class="no-proposals">
                                <span class="no-proposals-icon">🗳️</span>
                                <h4>No Active Proposals</h4>
                                <p>The governance system is being prepared. Proposal functionality will be available after TGE.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Financial Fortress Section -->
        <section class="financial-fortress-section tokenomics-section" id="fortress">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Financial Fortress Architecture</h2>
                    <p class="section-subtitle">
                        Multi-layered defense system ensuring platform survival through any market condition
                    </p>
                </div>
                <div class="fortress-container">
                    <div class="fortress-layers">
                        <div class="fortress-layer">
                            <div class="layer-number">1</div>
                            <div class="layer-content">
                                <h4>Presale Revenue Layer</h4>
                                <p>Initial funding from token presale provides 2-3 year operational runway independent of token allocations.</p>
                                <span class="layer-status active">Active</span>
                            </div>
                        </div>
                        <div class="fortress-layer">
                            <div class="layer-number">2</div>
                            <div class="layer-content">
                                <h4>Team Allocation Layer</h4>
                                <p>8% team allocation (400M tokens) provides additional 24+ months of operational funding.</p>
                                <span class="layer-status ready">Ready</span>
                            </div>
                        </div>
                        <div class="fortress-layer">
                            <div class="layer-number">3</div>
                            <div class="layer-content">
                                <h4>Community Incentives Layer</h4>
                                <p>24% allocation (1.2B tokens) ensures 36+ months of staking rewards and community programs.</p>
                                <span class="layer-status building">Building</span>
                            </div>
                        </div>
                        <div class="fortress-layer">
                            <div class="layer-number">4</div>
                            <div class="layer-content">
                                <h4>Ecosystem Development Layer</h4>
                                <p>20% allocation (1B tokens) funds partnerships and strategic initiatives for 24+ months.</p>
                                <span class="layer-status secured">Secured</span>
                            </div>
                        </div>
                        <div class="fortress-layer">
                            <div class="layer-number">5</div>
                            <div class="layer-content">
                                <h4>Emergency Reserve Layer</h4>
                                <p>4% reserve fund (200M tokens) + Stability Fund provide final safety net for extreme scenarios.</p>
                                <span class="layer-status secured">Secured</span>
                            </div>
                        </div>
                    </div>
                    <div class="fortress-benefits">
                        <h3>Financial Fortress Benefits</h3>
                        <div class="benefits-grid">
                            <div class="benefit-card">
                                <span class="benefit-icon">🛡️</span>
                                <h4>Crisis Immunity</h4>
                                <p>Multiple funding layers ensure survival through any market downturn or black swan event.</p>
                            </div>
                            <div class="benefit-card">
                                <span class="benefit-icon">📈</span>
                                <h4>Value Preservation</h4>
                                <p>Long-term funding security creates confidence and supports token price appreciation.</p>
                            </div>
                            <div class="benefit-card">
                                <span class="benefit-icon">🎯</span>
                                <h4>Strategic Flexibility</h4>
                                <p>Extended runway allows for patient capital deployment and strategic decision making.</p>
                            </div>
                            <div class="benefit-card">
                                <span class="benefit-icon">🤝</span>
                                <h4>Stakeholder Confidence</h4>
                                <p>Institutional-grade financial management attracts serious investors and partners.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tokenomics CTA Section -->
        <section class="tokenomics-cta-section">
            <div class="container">
                <div class="cta-container">
                    <div class="cta-content">
                        <h2>Built for Generational Success</h2>
                        <p>
                            TEACH token isn't just another cryptocurrency - it's a financial fortress designed to last decades.
                            Join the revolution in sustainable tokenomics and education funding.
                        </p>
                        <div class="cta-buttons">
                            <a href="/buy-trade" class="btn btn-primary btn-large">
                                <span>Buy TEACH Tokens</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                            <a href="/whitepaper" class="btn btn-secondary btn-large">
                                <span>Read Whitepaper</span>
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </div>
                    <div class="cta-stats">
                        <div class="cta-stat">
                            <span class="cta-stat-value">10+</span>
                            <span class="cta-stat-label">Years Runway</span>
                        </div>
                        <div class="cta-stat">
                            <span class="cta-stat-value">80%</span>
                            <span class="cta-stat-label">Tokens Locked</span>
                        </div>
                        <div class="cta-stat">
                            <span class="cta-stat-value">5</span>
                            <span class="cta-stat-label">Defense Layers</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="footer">
                <div class="container">
                    <div class="footer-content">
                        <div class="footer-section">
                            <h4>TeachToken</h4>
                            <p>Revolutionary education funding through blockchain technology</p>
                        </div>

                        <div class="footer-section">
                            <h4>Tokenomics</h4>
                            <ul>
                                <li><a href="/tokenomics#distribution">Token Distribution</a></li>
                                <li><a href="/tokenomics#vesting">Vesting Schedule</a></li>
                                <li><a href="/tokenomics#treasury">Treasury Analytics</a></li>
                                <li><a href="/tokenomics#burn">Burn Mechanics</a></li>
                            </ul>
                        </div>

                        <div class="footer-section">
                            <h4>Platform</h4>
                            <ul>
                                <li><a href="/#platform">Development</a></li>
                                <li><a href="#">Documentation</a></li>
                                <li><a href="#">API</a></li>
                                <li><a href="#">Roadmap</a></li>
                            </ul>
                        </div>

                        <div class="footer-section">
                            <h4>Community</h4>
                            <ul>
                                <li><a href="#">Discord</a></li>
                                <li><a href="#">Telegram</a></li>
                                <li><a href="#">Twitter</a></li>
                                <li><a href="#">Blog</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="footer-bottom">
                        <p>&copy; 2024 TeachToken. All rights reserved.</p>
                        <div class="footer-links">
                            <a href="#">Privacy Policy</a>
                            <a href="#">Terms of Service</a>
                            <a href="#">Legal</a>
                        </div>
                    </div>
                </div>
            </footer>

            <!-- Syncfusion JS -->
            <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

            <!-- Custom JavaScript -->
            <script>
                // Pass server-side data to JavaScript
                window.TokenomicsPageData = @Html.Raw(ViewBag.JsonData ?? "{}");
            </script>
            <script src="~/js/tokenomics.js" asp-append-version="true"></script>
</body>
</html>
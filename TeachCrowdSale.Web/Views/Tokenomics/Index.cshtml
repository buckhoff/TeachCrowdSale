@model TeachCrowdSale.Core.Models.Tokenomics.TokenomicsDisplayModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "TEACH Token Tokenomics - Complete Financial Architecture";
    ViewData["Description"] = "Explore TEACH token's institutional-grade tokenomics with multi-year treasury runway, deflationary mechanics, and sustainable value creation.";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tokenomics.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material3-dark.css" />
}

<!-- Tokenomics Hero Section -->
<section class="tokenomics-hero-section">
    <div class="container">
        <div class="tokenomics-hero-container">
            <div class="tokenomics-hero-content">
                <h1>TEACH Token Tokenomics</h1>
                <p class="tokenomics-hero-subtitle">
                    Institutional-grade financial architecture designed for multi-year sustainability.
                    Our revolutionary treasury hierarchy ensures 10+ year operational runway through any market condition.
                </p>
                <div class="hero-metrics-grid">
                    <div class="hero-metric">
                        <span class="metric-value" data-live="totalSupply">5.0B</span>
                        <span class="metric-label">Total Supply</span>
                    </div>
                    <div class="hero-metric">
                        <span class="metric-value" data-live="lockedPercentage">80%</span>
                        <span class="metric-label">Locked Long-Term</span>
                    </div>
                    <div class="hero-metric">
                        <span class="metric-value" data-treasury="runwayYears">10.5</span>
                        <span class="metric-label">Years Runway</span>
                    </div>
                </div>
            </div>
            <div class="live-metrics-card">
                <h3>Live Token Metrics</h3>
                <div class="live-metrics-grid">
                    <div class="live-metric">
                        <span class="live-metric-label">Current Price</span>
                        <span class="live-metric-value" data-live="currentPrice">$0.065</span>
                    </div>
                    <div class="live-metric">
                        <span class="live-metric-label">Market Cap</span>
                        <span class="live-metric-value" data-live="marketCap">$325M</span>
                    </div>
                    <div class="live-metric">
                        <span class="live-metric-label">24h Volume</span>
                        <span class="live-metric-value" data-live="volume24h">$2.5M</span>
                    </div>
                    <div class="live-metric">
                        <span class="live-metric-label">24h Change</span>
                        <span class="live-metric-value positive" data-live="priceChange24h">+4.8%</span>
                    </div>
                    <div class="live-metric">
                        <span class="live-metric-label">Holders</span>
                        <span class="live-metric-value" data-live="holdersCount">3,247</span>
                    </div>
                    <div class="live-metric">
                        <span class="live-metric-label">TVL</span>
                        <span class="live-metric-value" data-live="totalValueLocked">$15M</span>
                    </div>
                </div>
                <div class="last-updated">
                    Last updated: Loading...
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Token Distribution Section -->
<section class="token-distribution-section tokenomics-section" id="distribution">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Token Distribution</h2>
            <p class="section-subtitle">
                Revolutionary 80/20 allocation model ensures long-term sustainability with limited circulating supply
            </p>
        </div>
        <div class="distribution-container">
            <div class="distribution-chart-container">
                <h3>Supply Allocation Breakdown</h3>
                <div id="tokenDistributionChart" style="height: 400px;"></div>
            </div>
            <div class="distribution-details">
                <h3>Allocation Details</h3>
                <div class="allocation-list" id="allocationList">
                    <!-- Dynamic content populated by JavaScript -->
                </div>
                <div class="supply-metrics">
                    <h4>Supply Metrics</h4>
                    <div class="metrics-grid">
                        <div class="supply-metric">
                            <span class="supply-metric-label">Max Supply</span>
                            <span class="supply-metric-value" data-supply="maxSupply">5.0B</span>
                        </div>
                        <div class="supply-metric">
                            <span class="supply-metric-label">Circulating</span>
                            <span class="supply-metric-value" data-supply="circulatingSupply">1.0B</span>
                        </div>
                        <div class="supply-metric">
                            <span class="supply-metric-label">Locked</span>
                            <span class="supply-metric-value" data-supply="lockedSupply">4.0B</span>
                        </div>
                        <div class="supply-metric">
                            <span class="supply-metric-label">Burned</span>
                            <span class="supply-metric-value" data-supply="burnedSupply">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Vesting Schedule Section -->
<section class="vesting-schedule-section tokenomics-section" id="vesting">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Vesting Schedule</h2>
            <p class="section-subtitle">
                Strategic token release timeline designed to prevent dumps and ensure long-term value creation
            </p>
        </div>
        <div class="vesting-container">
            <div class="vesting-chart-container">
                <h3>Token Unlock Timeline</h3>
                <div id="vestingTimelineChart" style="height: 400px;"></div>
            </div>
            <div class="vesting-categories">
                <h3>Vesting Categories</h3>
                <div id="vestingCategoriesList">
                    <!-- Dynamic content populated by JavaScript -->
                </div>
                <div class="vesting-summary">
                    <h4>Vesting Summary</h4>
                    <div class="summary-stats">
                        <div class="summary-stat">
                            <span class="stat-label">Total Vested</span>
                            <span class="stat-value" data-vesting="totalVested">4.0B TEACH</span>
                        </div>
                        <div class="summary-stat">
                            <span class="stat-label">Currently Unlocked</span>
                            <span class="stat-value" data-vesting="currentlyUnlocked">1.0B TEACH</span>
                        </div>
                        <div class="summary-stat">
                            <span class="stat-label">Next Unlock</span>
                            <span class="stat-value" data-vesting="nextUnlockDate">In 90 days</span>
                        </div>
                        <div class="summary-stat">
                            <span class="stat-label">Next Amount</span>
                            <span class="stat-value" data-vesting="nextUnlockAmount">250M TEACH</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Treasury Analytics Section -->
<section class="treasury-analytics-section tokenomics-section" id="treasury">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Treasury Analytics</h2>
            <p class="section-subtitle">
                Multi-layered financial fortress designed to survive any market condition with 10+ year operational runway
            </p>
        </div>
        <div class="treasury-container">
            <div class="treasury-overview">
                <div class="treasury-metrics">
                    <div class="treasury-metric primary">
                        <span class="metric-icon">💰</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="totalValue">$87.5M</span>
                            <span class="metric-label">Total Treasury Value</span>
                        </div>
                    </div>
                    <div class="treasury-metric secondary">
                        <span class="metric-icon">⏱️</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="runwayYears">10.5</span>
                            <span class="metric-label">Years Operational Runway</span>
                        </div>
                    </div>
                    <div class="treasury-metric success">
                        <span class="metric-icon">🔒</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="safetyFund">$8.75M</span>
                            <span class="metric-label">Emergency Safety Fund</span>
                        </div>
                    </div>
                    <div class="treasury-metric warning">
                        <span class="metric-icon">📊</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="monthlyBurn">$695K</span>
                            <span class="metric-label">Monthly Burn Rate</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="treasury-allocation-container">
                <h3>Treasury Allocation</h3>
                <div id="treasuryAllocationChart" style="height: 350px;"></div>
            </div>
            <div class="scenario-analysis">
                <h3>Stress Test Scenarios</h3>
                <div class="scenarios-grid" id="scenariosGrid">
                    <!-- Dynamic content populated by JavaScript -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Burn Mechanics Section -->
<section
<!-- Treasury Analytics Section -->
<section class="treasury-analytics-section analytics-section" id="treasury">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Treasury Analytics</h2>
            <p class="section-subtitle">
                Multi-layered financial fortress designed to survive any market condition with 10+ year operational runway
            </p>
        </div>

        <div class="treasury-container">
            <!-- Treasury Overview Metrics -->
            <div class="treasury-overview">
                <div class="treasury-metrics">
                    <div class="treasury-metric primary">
                        <span class="metric-icon">💰</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="totalValue">$87.5M</span>
                            <span class="metric-label">Total Treasury Value</span>
                        </div>
                    </div>
                    <div class="treasury-metric secondary">
                        <span class="metric-icon">⏱️</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="runwayYears">10.5</span>
                            <span class="metric-label">Years Operational Runway</span>
                        </div>
                    </div>
                    <div class="treasury-metric success">
                        <span class="metric-icon">🔒</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="safetyFund">$8.75M</span>
                            <span class="metric-label">Emergency Safety Fund</span>
                        </div>
                    </div>
                    <div class="treasury-metric warning">
                        <span class="metric-icon">📊</span>
                        <div class="metric-info">
                            <span class="metric-value" data-treasury="monthlyBurn">$695K</span>
                            <span class="metric-label">Monthly Burn Rate</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Treasury Charts -->
            <div class="analytics-charts-grid">
                <div class="chart-container">
                    <h3 class="chart-title">Treasury Allocation</h3>
                    <div id="treasuryAllocationChart" style="height: 350px;"></div>
                </div>
                <div class="chart-container">
                    <h3 class="chart-title">Runway Projection</h3>
                    <div id="runwayProjectionChart" style="height: 350px;"></div>
                </div>
            </div>

            <!-- Stress Test Scenarios -->
            <div class="scenario-analysis">
                <h3>Stress Test Scenarios</h3>
                <div class="scenarios-grid" id="scenariosGrid">
                    <div class="scenario-card normal">
                        <div class="scenario-header">
                            <h4>Normal Market</h4>
                            <span class="scenario-probability">65%</span>
                        </div>
                        <div class="scenario-metrics">
                            <div class="scenario-metric">
                                <span class="metric-label">Projected Runway</span>
                                <span class="metric-value">12+ Years</span>
                            </div>
                            <div class="scenario-metric">
                                <span class="metric-label">Risk Level</span>
                                <span class="risk-badge low">Low</span>
                            </div>
                        </div>
                        <div class="scenario-description">
                            Steady growth with normal market conditions. Platform development proceeds as planned.
                        </div>
                    </div>

                    <div class="scenario-card moderate">
                        <div class="scenario-header">
                            <h4>Bear Market</h4>
                            <span class="scenario-probability">25%</span>
                        </div>
                        <div class="scenario-metrics">
                            <div class="scenario-metric">
                                <span class="metric-label">Projected Runway</span>
                                <span class="metric-value">8+ Years</span>
                            </div>
                            <div class="scenario-metric">
                                <span class="metric-label">Risk Level</span>
                                <span class="risk-badge medium">Medium</span>
                            </div>
                        </div>
                        <div class="scenario-description">
                            80% market decline. Team allocation accessed, reduced spending, core operations maintained.
                        </div>
                    </div>

                    <div class="scenario-card severe">
                        <div class="scenario-header">
                            <h4>Extreme Crisis</h4>
                            <span class="scenario-probability">8%</span>
                        </div>
                        <div class="scenario-metrics">
                            <div class="scenario-metric">
                                <span class="metric-label">Projected Runway</span>
                                <span class="metric-value">5+ Years</span>
                            </div>
                            <div class="scenario-metric">
                                <span class="metric-label">Risk Level</span>
                                <span class="risk-badge high">High</span>
                            </div>
                        </div>
                        <div class="scenario-description">
                            Black swan event. Emergency reserves activated, governance-controlled resource allocation.
                        </div>
                    </div>

                    <div class="scenario-card catastrophic">
                        <div class="scenario-header">
                            <h4>Catastrophic Event</h4>
                            <span class="scenario-probability">2%</span>
                        </div>
                        <div class="scenario-metrics">
                            <div class="scenario-metric">
                                <span class="metric-label">Projected Runway</span>
                                <span class="metric-value">3+ Years</span>
                            </div>
                            <div class="scenario-metric">
                                <span class="metric-label">Risk Level</span>
                                <span class="risk-badge critical">Critical</span>
                            </div>
                        </div>
                        <div class="scenario-description">
                            Platform-threatening crisis. Stability fund activated, controlled wind-down or recovery plan.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Financial Fortress Visualization -->
            <div class="financial-fortress">
                <h3>Financial Fortress Layers</h3>
                <div class="fortress-layers">
                    <div class="fortress-layer active" data-layer="1">
                        <div class="layer-number">1</div>
                        <div class="layer-content">
                            <h4>Presale Revenue</h4>
                            <p>Initial funding provides 2-3 year operational runway independent of token allocations.</p>
                            <span class="layer-status active">Active</span>
                        </div>
                        <div class="layer-value">$21.9M</div>
                    </div>
                    <div class="fortress-layer ready" data-layer="2">
                        <div class="layer-number">2</div>
                        <div class="layer-content">
                            <h4>Team Allocation</h4>
                            <p>8% allocation (400M tokens) provides additional 24+ months of operational funding.</p>
                            <span class="layer-status ready">Ready</span>
                        </div>
                        <div class="layer-value">$26.0M</div>
                    </div>
                    <div class="fortress-layer secured" data-layer="3">
                        <div class="layer-number">3</div>
                        <div class="layer-content">
                            <h4>Community Incentives</h4>
                            <p>24% allocation ensures 36+ months of staking rewards and community programs.</p>
                            <span class="layer-status secured">Secured</span>
                        </div>
                        <div class="layer-value">$78.0M</div>
                    </div>
                    <div class="fortress-layer secured" data-layer="4">
                        <div class="layer-number">4</div>
                        <div class="layer-content">
                            <h4>Ecosystem Development</h4>
                            <p>20% allocation funds partnerships and strategic initiatives for 24+ months.</p>
                            <span class="layer-status secured">Secured</span>
                        </div>
                        <div class="layer-value">$65.0M</div>
                    </div>
                    <div class="fortress-layer emergency" data-layer="5">
                        <div class="layer-number">5</div>
                        <div class="layer-content">
                            <h4>Emergency Reserves</h4>
                            <p>4% reserve fund + Stability Fund provide final safety net for extreme scenarios.</p>
                            <span class="layer-status emergency">Emergency</span>
                        </div>
                        <div class="layer-value">$13.0M</div>
                    </div>
                </div>
            </div>

            <!-- Treasury Performance Metrics -->
            <div class="treasury-performance">
                <h3>Treasury Performance</h3>
                <div class="performance-grid">
                    <div class="performance-metric">
                        <div class="metric-header">
                            <span class="metric-icon">⚡</span>
                            <h4>Efficiency Rating</h4>
                        </div>
                        <div class="metric-value" data-treasury="efficiency">92.5%</div>
                        <div class="metric-description">
                            Treasury utilization efficiency compared to industry standards
                        </div>
                    </div>
                    <div class="performance-metric">
                        <div class="metric-header">
                            <span class="metric-icon">👥</span>
                            <h4>Cost Per User</h4>
                        </div>
                        <div class="metric-value" data-treasury="costPerUser">$12.50</div>
                        <div class="metric-description">
                            Average acquisition and retention cost per platform user
                        </div>
                    </div>
                    <div class="performance-metric">
                        <div class="metric-header">
                            <span class="metric-icon">📈</span>
                            <h4>Growth Rate</h4>
                        </div>
                        <div class="metric-value" data-treasury="growthRate">15.2%</div>
                        <div class="metric-description">
                            Month-over-month revenue and user base growth rate
                        </div>
                    </div>
                    <div class="performance-metric">
                        <div class="metric-header">
                            <span class="metric-icon">🛡️</span>
                            <h4>Sustainability Score</h4>
                        </div>
                        <div class="metric-value" data-treasury="sustainability">95.0%</div>
                        <div class="metric-description">
                            Overall financial sustainability and risk management score
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- JavaScript for navigation enhancements -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Setup roadmap navigation active states
        setupRoadmapNavigation();

        // Setup quick navigation smooth scrolling
        setupQuickNavigation();
    });

    function setupRoadmapNavigation() {
        const currentPath = window.location.pathname;

        // Update active states for roadmap navigation
        if (currentPath === '/roadmap') {
            const roadmapNavLink = document.querySelector('.nav-link[href="/roadmap"]');
            const mobileRoadmapLink = document.querySelector('.mobile-nav-link[href="/roadmap"]');

            if (roadmapNavLink) roadmapNavLink.classList.add('active');
            if (mobileRoadmapLink) mobileRoadmapLink.classList.add('active');
        }
    }

    function setupQuickNavigation() {
        const quickNavLinks = document.querySelectorAll('.quick-nav-link');

        quickNavLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                const href = this.getAttribute('href');

                if (href.startsWith('#')) {
                    e.preventDefault();

                    const targetId = href.substring(1);
                    const targetElement = document.getElementById(targetId);

                    if (targetElement) {
                        // Update active state
                        quickNavLinks.forEach(l => l.classList.remove('active'));
                        this.classList.add('active');

                        // Smooth scroll to target
                        const offsetTop = targetElement.getBoundingClientRect().top + window.pageYOffset - 100;
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // Update active quick nav on scroll
        const observerOptions = {
            rootMargin: '-20% 0px -20% 0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const sectionId = entry.target.id;
                    const activeLink = document.querySelector(`.quick-nav-link[href="#${sectionId}"]`);

                    if (activeLink) {
                        quickNavLinks.forEach(l => l.classList.remove('active'));
                        activeLink.classList.add('active');
                    }
                }
            });
        }, observerOptions);

        // Observe roadmap sections
        const sections = document.querySelectorAll('[id]');
        sections.forEach(section => {
            if (section.id && ['overview', 'milestones', 'timeline', 'github', 'progress'].includes(section.id)) {
                observer.observe(section);
            }
        });
    }
</script>
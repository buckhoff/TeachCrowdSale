@model TeachCrowdSale.Core.Models.PlatformDemoModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = ViewData["Title"] ?? "Platform Demo - PencilImpact";
    ViewData["Description"] = ViewData["Description"] ?? "Experience how PencilImpact will revolutionize education funding with this interactive demonstration.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Platform Demo - PencilImpact" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <meta property="og:image" content="/images/pencilimpact-demo-og.jpg" />
    <meta property="og:url" content="https://pencilimpact.org/demo" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Platform Demo - PencilImpact" />
    <meta name="twitter:description" content="@ViewData["Description"]" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Syncfusion CSS -->
    <link href="https://cdn.syncfusion.com/ej2/material3-dark.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png" />
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="container">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="/" class="brand-link">
                        <span class="brand-icon">✏️</span>
                        <span class="brand-text">PencilImpact</span>
                    </a>
                </div>

                <ul class="nav-menu" id="navMenu">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/vision" class="nav-link">Vision</a></li>
                    <li><a href="/demo" class="nav-link active">Demo</a></li>
                    <li><a href="/roadmap" class="nav-link">Roadmap</a></li>
                    <li>
                        <a href="https://teachtoken.io" class="nav-link nav-link-external" target="_blank">
                            TEACH Token <span class="external-icon">↗</span>
                        </a>
                    </li>
                    <li><a href="/#waitlist" class="nav-cta">Join Waitlist</a></li>
                </ul>

                <div class="nav-toggle" id="navToggle">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main role="main" class="main-content">
        <!-- Demo Hero Section -->
        <section class="demo-hero-section">
            <div class="container">
                <div class="demo-hero-content">
                    <h1 class="section-title">Interactive Platform Demo</h1>
                    <p class="section-subtitle">
                        Experience how PencilImpact will revolutionize education funding.
                        Try our interactive demo to see the platform in action.
                    </p>

                    <div class="demo-navigation">
                        <button class="demo-nav-btn active" data-demo="browse">
                            <span class="demo-nav-icon">🔍</span>
                            Browse Projects
                        </button>
                        <button class="demo-nav-btn" data-demo="donate">
                            <span class="demo-nav-icon">❤️</span>
                            Choose Impact
                        </button>
                        <button class="demo-nav-btn" data-demo="tokens">
                            <span class="demo-nav-icon">🪙</span>
                            TEACH Benefits
                        </button>
                        <button class="demo-nav-btn" data-demo="track">
                            <span class="demo-nav-icon">📊</span>
                            Track Results
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Demo Flow Section -->
        <section class="demo-flow-section">
            <div class="container">
                <div class="demo-flow-grid">
                    @foreach (var step in Model.DemoFlow)
                    {
                        <div class="demo-step" data-step="@step.Title.Replace(" ", "").ToLower()">
                            <div class="demo-step-header">
                                <div class="demo-step-icon">@step.Icon</div>
                                <h3 class="demo-step-title">@step.Title</h3>
                            </div>
                            <p class="demo-step-description">@step.Description</p>
                            <ul class="demo-step-features">
                                @foreach (var feature in step.Features)
                                {
                                    <li>@feature</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- Interactive Demo Section -->
        <section class="interactive-demo-section">
            <div class="container">
                <div class="demo-container" id="demoContainer">

                    <!-- Browse Projects Demo -->
                    <div class="demo-panel active" id="browseDemo">
                        <div class="demo-panel-header">
                            <h3>Browse Education Projects</h3>
                            <p>Explore real projects from verified teachers across the country</p>
                        </div>

                        <div class="demo-filters">
                            <select id="categoryFilter" class="demo-filter">
                                <option value="">All Categories</option>
                                <option value="STEM">STEM</option>
                                <option value="Arts">Arts & Creativity</option>
                                <option value="Literacy">Literacy</option>
                                <option value="Technology">Technology</option>
                            </select>

                            <select id="stateFilter" class="demo-filter">
                                <option value="">All States</option>
                                <option value="CA">California</option>
                                <option value="TX">Texas</option>
                                <option value="NY">New York</option>
                                <option value="FL">Florida</option>
                                <option value="OH">Ohio</option>
                                <option value="MT">Montana</option>
                            </select>

                            <select id="urgencyFilter" class="demo-filter">
                                <option value="">All Projects</option>
                                <option value="urgent">Urgent Projects</option>
                                <option value="featured">Featured Projects</option>
                            </select>
                        </div>

                        <div class="demo-projects-grid" id="demoProjectsGrid">
                            @foreach (var project in Model.FeaturedProjects)
                            {
                                <div class="demo-project-card"
                                     data-category="@project.Category"
                                     data-state="@project.State"
                                     data-urgent="@(project.IsUrgent ? "true" : "false")"
                                     data-featured="@(project.IsFeatured ? "true" : "false")">

                                    <div class="demo-project-header">
                                        <div class="project-category">@project.Category</div>
                                        @if (project.IsUrgent)
                                        {
                                            <div class="urgent-badge">Urgent</div>
                                        }
                                    </div>

                                    <h4 class="demo-project-title">@project.Title</h4>
                                    <p class="demo-project-description">@project.ShortDescription</p>

                                    <div class="demo-project-meta">
                                        <div class="project-location">📍 @project.Location</div>
                                        <div class="project-teacher">👩‍🏫 @project.TeacherName</div>
                                        <div class="project-students">🎓 @project.StudentsImpacted students</div>
                                    </div>

                                    <div class="demo-project-funding">
                                        <div class="funding-progress">
                                            <div class="progress-bar">
                                                <div class="progress-fill" style="width: @(project.FundingProgress)%"></div>
                                            </div>
                                            <div class="funding-stats">
                                                <span>$@(project.CurrentFunding.ToString("N0")) of $@(project.FundingGoal.ToString("N0"))</span>
                                            </div>
                                        </div>
                                    </div>

                                    <button class="btn btn-primary btn-sm demo-donate-btn" data-project-id="@project.Id">
                                        Support This Project
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Donation Demo -->
                    <div class="demo-panel" id="donateDemo">
                        <div class="demo-panel-header">
                            <h3>Choose Your Impact</h3>
                            <p>Select a project and donation amount to see the difference you'll make</p>
                        </div>

                        <div class="donation-calculator">
                            <div class="selected-project" id="selectedProject">
                                <div class="project-placeholder">
                                    <div class="placeholder-icon">📚</div>
                                    <p>Select a project from the browse section to continue</p>
                                </div>
                            </div>

                            <div class="donation-amounts">
                                <h4>Choose Donation Amount</h4>
                                <div class="amount-buttons">
                                    <button class="amount-btn" data-amount="25">$25</button>
                                    <button class="amount-btn" data-amount="50">$50</button>
                                    <button class="amount-btn active" data-amount="100">$100</button>
                                    <button class="amount-btn" data-amount="250">$250</button>
                                </div>
                                <div class="custom-amount">
                                    <input type="number" id="customAmount" placeholder="Custom amount" min="1" max="10000" />
                                </div>
                            </div>

                            <div class="impact-preview" id="impactPreview">
                                <h4>Your Impact</h4>
                                <div class="impact-stats">
                                    <div class="impact-stat">
                                        <div class="stat-value" id="fundingPercentage">4.5%</div>
                                        <div class="stat-label">of project funded</div>
                                    </div>
                                    <div class="impact-stat">
                                        <div class="stat-value" id="studentsHelped">85</div>
                                        <div class="stat-label">students helped</div>
                                    </div>
                                    <div class="impact-stat">
                                        <div class="stat-value" id="platformFee">$3.00</div>
                                        <div class="stat-label">platform fee</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- TEACH Token Benefits Demo -->
                    <div class="demo-panel" id="tokensDemo">
                        <div class="demo-panel-header">
                            <h3>TEACH Token Benefits</h3>
                            <p>See how using TEACH tokens enhances your donation experience</p>
                        </div>

                        <div class="token-comparison">
                            <div class="comparison-header">
                                <h4>Payment Method Comparison</h4>
                                <p>Compare traditional payments vs. TEACH tokens for a $100 donation</p>
                            </div>

                            <div class="comparison-grid">
                                <div class="comparison-card traditional">
                                    <h5>💳 Traditional Payment</h5>
                                    <div class="comparison-stats">
                                        <div class="stat-row">
                                            <span>Donation Amount:</span>
                                            <span>$100.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Platform Fee (5%):</span>
                                            <span class="fee-amount">$5.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>To Project:</span>
                                            <span class="final-amount">$95.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Governance Rights:</span>
                                            <span class="no-benefit">❌</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Staking Rewards:</span>
                                            <span class="no-benefit">❌</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="comparison-card tokens">
                                    <h5>🪙 TEACH Tokens</h5>
                                    <div class="comparison-stats">
                                        <div class="stat-row">
                                            <span>Token Value:</span>
                                            <span>$100.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Platform Fee (2%):</span>
                                            <span class="fee-amount discounted">$2.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>To Project:</span>
                                            <span class="final-amount enhanced">$98.00</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Governance Rights:</span>
                                            <span class="benefit">✅</span>
                                        </div>
                                        <div class="stat-row">
                                            <span>Staking Rewards:</span>
                                            <span class="benefit">✅</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="token-benefits-list">
                                <h4>Additional TEACH Token Benefits</h4>
                                <div class="benefits-grid">
                                    <div class="benefit-item">
                                        <div class="benefit-icon">🗳️</div>
                                        <div class="benefit-text">
                                            <strong>Governance Voting</strong>
                                            <p>Vote on featured projects and platform decisions</p>
                                        </div>
                                    </div>
                                    <div class="benefit-item">
                                        <div class="benefit-icon">🏫</div>
                                        <div class="benefit-text">
                                            <strong>School Staking</strong>
                                            <p>Stake tokens to support a specific school and earn rewards</p>
                                        </div>
                                    </div>
                                    <div class="benefit-item">
                                        <div class="benefit-icon">📈</div>
                                        <div class="benefit-text">
                                            <strong>Enhanced Analytics</strong>
                                            <p>Access detailed impact reports and platform insights</p>
                                        </div>
                                    </div>
                                    <div class="benefit-item">
                                        <div class="benefit-icon">🎁</div>
                                        <div class="benefit-text">
                                            <strong>NFT Rewards</strong>
                                            <p>Earn special NFTs for participation in pencil drives</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Impact Tracking Demo -->
                    <div class="demo-panel" id="trackDemo">
                        <div class="demo-panel-header">
                            <h3>Track Your Impact</h3>
                            <p>See real-time updates on how your donations are making a difference</p>
                        </div>

                        <div class="impact-dashboard">
                            <div class="dashboard-stats">
                                <div class="dashboard-stat">
                                    <div class="stat-icon">💰</div>
                                    <div class="stat-content">
                                        <div class="stat-value">$847</div>
                                        <div class="stat-label">Total Donated</div>
                                    </div>
                                </div>
                                <div class="dashboard-stat">
                                    <div class="stat-icon">📚</div>
                                    <div class="stat-content">
                                        <div class="stat-value">12</div>
                                        <div class="stat-label">Projects Supported</div>
                                    </div>
                                </div>
                                <div class="dashboard-stat">
                                    <div class="stat-icon">🎓</div>
                                    <div class="stat-content">
                                        <div class="stat-value">1,247</div>
                                        <div class="stat-label">Students Impacted</div>
                                    </div>
                                </div>
                                <div class="dashboard-stat">
                                    <div class="stat-icon">🪙</div>
                                    <div class="stat-content">
                                        <div class="stat-value">1,250</div>
                                        <div class="stat-label">TEACH Tokens Earned</div>
                                    </div>
                                </div>
                            </div>

                            <div class="recent-updates">
                                <h4>Recent Project Updates</h4>
                                <div class="update-feed">
                                    <div class="update-item">
                                        <div class="update-avatar">📸</div>
                                        <div class="update-content">
                                            <div class="update-header">
                                                <strong>STEM Lab Equipment</strong>
                                                <span class="update-time">2 hours ago</span>
                                            </div>
                                            <p>Ms. Johnson shared photos of students using the new microscopes you helped fund!</p>
                                        </div>
                                    </div>
                                    <div class="update-item">
                                        <div class="update-avatar">✅</div>
                                        <div class="update-content">
                                            <div class="update-header">
                                                <strong>Classroom Library</strong>
                                                <span class="update-time">1 day ago</span>
                                            </div>
                                            <p>Project fully funded! 100 new books are on their way to Lincoln Elementary.</p>
                                        </div>
                                    </div>
                                    <div class="update-item">
                                        <div class="update-avatar">🎯</div>
                                        <div class="update-content">
                                            <div class="update-header">
                                                <strong>Art Supplies Drive</strong>
                                                <span class="update-time">3 days ago</span>
                                            </div>
                                            <p>75% funded! Your donation helped reach a major milestone.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pencil Drive Demo Section -->
        <section class="pencil-drive-demo-section" id="pencil-drive">
            <div class="container">
                <div class="demo-panel-header">
                    <h2 class="section-title">@Model.PencilDrive.Title Demo</h2>
                    <p class="section-subtitle">Experience how TEACH token holders can participate in our annual pencil drive</p>
                </div>

                <div class="pencil-drive-simulator">
                    <div class="drive-status-demo">
                        <div class="drive-progress-demo">
                            <h3>Live Drive Progress</h3>
                            <div class="progress-visualization">
                                <div class="drive-progress-bar">
                                    <div class="progress-fill" style="width: @(Model.PencilDrive.ProgressPercentage)%">
                                        <div class="progress-glow"></div>
                                    </div>
                                    <div class="progress-percentage">@(Model.PencilDrive.ProgressPercentage.ToString("F1"))%</div>
                                </div>
                                <div class="progress-details">
                                    <span class="current-pencils">@(Model.PencilDrive.PencilsSecured.ToString("N0"))</span>
                                    <span class="total-goal">of @(Model.PencilDrive.TotalPencilGoal.ToString("N0")) pencils secured</span>
                                </div>
                            </div>
                        </div>

                        <div class="drive-participation-demo">
                            <h4>Donate TEACH Tokens</h4>
                            <p>See how your tokens convert to pencils for schools</p>

                            <div class="token-donation-calculator">
                                <div class="token-input-group">
                                    <label>TEACH Tokens to Donate:</label>
                                    <input type="number" id="tokenAmount" value="125" min="1" max="10000" class="token-input" />
                                    <div class="token-value">≈ $@(125 * 0.001m).ToString("F2") USD</div>
                                </div>

                                <div class="conversion-display">
                                    <div class="conversion-arrow">→</div>
                                    <div class="pencil-result">
                                        <div class="pencil-count" id="pencilCount">125</div>
                                        <div class="pencil-label">Pencils for Schools</div>
                                        <div class="pencil-visual">✏️✏️✏️✏️✏️</div>
                                    </div>
                                </div>

                                <div class="nft-reward-preview">
                                    <div class="nft-icon">🏆</div>
                                    <div class="nft-text">
                                        <strong>NFT Reward Earned!</strong>
                                        <p>Pencil Drive Contributor Badge</p>
                                    </div>
                                </div>

                                <button class="btn btn-primary" id="simulateDonation">
                                    Simulate Donation
                                    <span class="btn-icon">✏️</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="demo-cta-section">
            <div class="container">
                <div class="demo-cta-content">
                    <h2 class="section-title">Ready to Make a Real Impact?</h2>
                    <p class="section-subtitle">
                        This demo shows just a preview of what's coming. Join our waitlist to be first in line
                        when PencilImpact launches and start making a difference in education.
                    </p>

                    <div class="demo-cta-stats">
                        <div class="cta-stat">
                            <div class="stat-value">10,000+</div>
                            <div class="stat-label">Schools Ready to Join</div>
                        </div>
                        <div class="cta-stat">
                            <div class="stat-value">$100M+</div>
                            <div class="stat-label">Annual Funding Goal</div>
                        </div>
                        <div class="cta-stat">
                            <div class="stat-value">5M+</div>
                            <div class="stat-label">Students to Impact</div>
                        </div>
                    </div>

                    <div class="demo-cta-actions">
                        <a href="/#waitlist" class="btn btn-primary btn-lg">
                            Join the Waitlist
                            <span class="btn-icon">🚀</span>
                        </a>
                        <a href="/vision" class="btn btn-outline btn-lg">
                            Learn More About Our Vision
                            <span class="btn-icon">💡</span>
                        </a>
                        <a href="https://teachtoken.io" target="_blank" class="btn btn-secondary btn-lg">
                            Get TEACH Tokens
                            <span class="btn-icon">🪙</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>PencilImpact</h4>
                    <p>Small tokens, big impacts. Revolutionizing education funding through community-driven support.</p>
                    <div class="footer-social">
                        <a href="#" class="social-link" aria-label="Twitter">🐦</a>
                        <a href="#" class="social-link" aria-label="Discord">💬</a>
                        <a href="#" class="social-link" aria-label="Telegram">📱</a>
                    </div>
                </div>

                <div class="footer-section">
                    <h4>Platform</h4>
                    <ul>
                        <li><a href="/vision">Vision</a></li>
                        <li><a href="/demo">Interactive Demo</a></li>
                        <li><a href="/roadmap">Development Roadmap</a></li>
                        <li><a href="/#waitlist">Join Waitlist</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h4>TEACH Token</h4>
                    <ul>
                        <li><a href="https://teachtoken.io" target="_blank">Token Sale</a></li>
                        <li><a href="https://teachtoken.io/tokenomics" target="_blank">Tokenomics</a></li>
                        <li><a href="https://teachtoken.io/staking" target="_blank">Staking</a></li>
                        <li><a href="https://teachtoken.io/analytics" target="_blank">Analytics</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h4>Community</h4>
                    <ul>
                        <li><a href="#">Discord</a></li>
                        <li><a href="#">Telegram</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Updates Blog</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="/help">Help Center</a></li>
                        <li><a href="/contact">Contact Us</a></li>
                        <li><a href="/privacy">Privacy Policy</a></li>
                        <li><a href="/terms">Terms of Service</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="footer-bottom-left">
                    <p>&copy; 2025 PencilImpact. Building the future of education funding.</p>
                </div>
                <div class="footer-bottom-right">
                    <p>Powered by <a href="https://teachtoken.io" target="_blank" class="footer-link">TEACH Token</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/js/platform-core.js" asp-append-version="true"></script>
    <script src="~/js/platform-demo.js" asp-append-version="true"></script>

    <script>
        // Pass demo data to JavaScript
        window.DemoData = @Html.Raw(ViewBag.JsonData ?? "{}");

        // Initialize platform analytics when page loads
        document.addEventListener('DOMContentLoaded', function() {
            if (window.PlatformAnalytics) {
                window.PlatformAnalytics.init();
            }
        });
    </script>
</body>
</html>